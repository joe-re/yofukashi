{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": false
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": 0,

    "comma-dangle": 2,
    "comma-style": [2, "last"],
    "comma-spacing": [2, {"before": false, "after": true}],
    "semi": [2, "always"],
    "indent": [2, 2],
    "key-spacing": [0],
    "quotes": [2, "single", "avoid-escape"],
    "brace-style": [2, "1tbs", { "allowSingleLine": false }],
    "curly": 2,
    "object-curly-spacing": [2, "always"],
    "array-bracket-spacing": [2, "always"],
    "dot-location": [2, "object"],
    "camelcase": [2, {"properties": "never"}],
    "dot-notation": 2,
    "yoda": [2, "never", { "exceptRange": true }],

    "no-alert": 2,
    "no-array-constructor": 2,
    "no-caller": 2,
    "no-catch-shadow": 2,
    "no-dupe-args": 2,
    "no-else-return": 2,
    "no-empty-label": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-label-var": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-lonely-if": 2,
    "no-loop-func": 2,
    "no-multi-spaces": [2, {
      "exceptions":{
        "Property": true,
        "ImportDeclaration": true,
        "VariableDeclarator": true,
        "AssignmentExpression": true
      }
    }],
    "no-multi-str": 2,
    "no-multiple-empty-lines": [2, {max: 2}],
    "no-native-reassign": 2,
    "no-nested-ternary": 2,
    "no-new": 0,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-process-exit": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-throw-literal": 2,
    "no-trailing-spaces": 2,
    "no-undef": 0,
    "no-undef-init": 2,
    "no-underscore-dangle": 2,
    "no-unneeded-ternary": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "all", "argsIgnorePattern": "^_"}],
    "no-use-before-define": 2,
    "no-void": 2,
    "no-with": 2,

    "max-len": [1, 120, 2],
    "max-params": [1, 3],
    "max-depth": [1, 3],
    "max-statements": [1, 50],

    "new-cap": 0,
    "eqeqeq": 2,

    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-const": 2,
    "constructor-super": 2,
    "no-this-before-super": 2,
    "space-after-keywords": 2,
    "arrow-spacing": 2,

    "react/jsx-uses-vars": 1
  }
}
